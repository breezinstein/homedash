{
  "name": "homedash",
  "version": "2.0.0",
  "description": "A modern, responsive dashboard for managing homelab services with server-side storage",
  "main": "index.html",
  "scripts": {
    "start": "cd server && npm start",
    "dev": "node scripts/dev.js",
    "serve": "python -m http.server 8000",
    "serve-static": "python -m http.server 8000",
    "install-server": "cd server && npm install",
    "build": "echo 'No build step required - static files'",
    "docker:build": "docker build -t homedash .",
    "docker:run": "docker run -p 3001:3001 -v homedash-data:/app/server/data homedash",
    "docker:compose": "docker-compose up -d"
  },
  "keywords": [
    "homelab",
    "dashboard",
    "self-hosted",
    "services",
    "alpine.js",
    "responsive",
    "nodejs",
    "express",
    "docker"
  ],
  "author": "Homedash Team",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/homedash#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/homedash.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/homedash/issues"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "dependencies": {}
}
